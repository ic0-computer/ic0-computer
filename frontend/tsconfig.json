{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "composite": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "**/*.svelte", "vite.config.ts", "src/libs/connectr.ts", "src/libs/identity.ts"]
}